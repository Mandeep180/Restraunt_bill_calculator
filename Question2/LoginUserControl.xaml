<UserControl x:Class="Question2.LoginUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Question2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <Grid x:Name="loginUserControl">
        <TextBox x:Name="username" HorizontalAlignment="Center" Padding="10 " Margin="0,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="216"/>
        <TextBox x:Name="password"  HorizontalAlignment="Center" Padding="10 " Margin="0,241,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="216"  />
        <TextBlock x:Name="title_Copy1" HorizontalAlignment="Left" Margin="293,143,0,0" TextWrapping="Wrap" Text="Username:" VerticalAlignment="Top" FontFamily="Segoe UI Light" Foreground="gray" FontSize="16"/>
        <TextBlock x:Name="title_Copy2" HorizontalAlignment="Left" Margin="293,216,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top" FontFamily="Segoe UI Light" Foreground="gray" FontSize="16" />

    </Grid>
</UserControl>
